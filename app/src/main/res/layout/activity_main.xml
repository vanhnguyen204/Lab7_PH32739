<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity_Bai2">
<TextView
    android:background="@drawable/border"
    android:layout_width="200dp"
    android:height="50dp"
    android:text="FAN"
    android:textSize="30sp"
    android:gravity="center"
    android:textStyle="bold"
    android:layout_height="wrap_content"/>
   <ImageView
       android:id="@+id/fan"
       android:layout_width="400dp"
       android:layout_height="400dp"
       android:src="@drawable/icon_fan"
       />
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button

        android:backgroundTint="#009DD8"
        android:layout_marginEnd="15dp"
        android:id="@+id/btn_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast"
        />
    <Button
        android:backgroundTint="#5E35B1"
        android:layout_marginEnd="15dp"
        android:id="@+id/btn_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        />
    <Button
        android:backgroundTint="#F4511E"
        android:id="@+id/btn_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slow"
        />


</LinearLayout>
    <Button
        android:backgroundTint="#C0CA33"
        android:id="@+id/btn_TurnOffFan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="Off"/>

</LinearLayout>